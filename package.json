{
  "name": "fmt-it",
  "type": "module",
  "version": "0.4.0",
  "packageManager": "pnpm@10.26.1",
  "description": "Format string tool.",
  "author": "alexzhang1030",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexzhang1030/fmt-it.git"
  },
  "keywords": [
    "format",
    "string"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "eslint .",
    "build": "tsup",
    "prepublishOnly": "pnpm run build",
    "release": "vitest run && bumpp --commit \"chore: release v%s\" --push --tag && pnpm publish",
    "prepare": "simple-git-hooks",
    "test": "vitest"
  },
  "devDependencies": {
    "@antfu/eslint-config-ts": "^0.43.1",
    "@types/pluralize": "^0.0.33",
    "bumpp": "^10.3.2",
    "camelcase": "^9.0.0",
    "eslint": "^9.39.2",
    "lint-staged": "^16.2.7",
    "pluralize": "^8.0.0",
    "simple-git-hooks": "^2.13.1",
    "tsup": "^8.5.1",
    "vitest": "^4.0.16"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,json,md,yaml,yml}": [
      "eslint --fix"
    ]
  },
  "eslintConfig": {
    "extends": "@antfu/eslint-config-ts"
  }
}
